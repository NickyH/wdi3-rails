.small-3.columns
.small-4.columns
  = render(:partial => 'shared/errors', :locals => {:object => @user})
  = form_for @user, :url => subscribers_path, :remote => true do |f|
    = f.label :username
    = f.text_field :username, :autofocus => true
    = f.label :email
    = f.text_field :email
    = f.label :password
    = f.password_field :password
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button radius alert')
    = f.submit :class => 'button radius success'
.small-5.columns