.row
  .large-3.columns
    .formbox
      = form_for @product, :remote => true do |f|
        = f.label :name
        = f.text_field :name, :autofocus => true
        = f.label :description
        = f.text_field :description
        = f.label :image
        = f.text_field :image
        = f.label :cost
        = f.text_field :cost
        = submit_tag 'Add Product', :class => 'button tiny radius success'
        = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius alert')
  .large-9.columns