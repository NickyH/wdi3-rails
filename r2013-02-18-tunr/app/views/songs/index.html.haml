%p.newlink= link_to('New Song', new_song_path, :class => 'button radius') if is_admin
%table
  - @songs.each do |song|
    %tr{:class => cycle('row0', 'row1')}
      %td= link_to(song.name, song_path(song))
      %td= link_to('Edit', edit_song_path(song), :class => 'button radius tiny') if is_admin
      %td= link_to('Delete', song, :method => :delete, :confirm => 'Are you sure?', :class => 'button alert radius tiny') if is_admin
