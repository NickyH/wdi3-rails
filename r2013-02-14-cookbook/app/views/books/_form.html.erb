<%= form_for @book do |f| %>

<%= f.label :title, "Book Title", :autofocus => 'autofocus' %>
<%= f.text_field :title %>
<%= f.label :cuisine %>
<%= f.text_field :cuisine %>
<%= f.label :chef %>
<%= f.text_field :chef %>
<%= f.label :image %>
<%= f.text_field :image %>
<br>
<% Recipe.all.each do |recipe| %>
  <span><%= recipe.name %></span>
  <%= check_box_tag 'book[recipe_ids][]', recipe.id, recipe.in?(@book.recipes.to_a) %>
<% end %>
<br>
<%= f.submit %>
<% end %>