
.row
  - @itineraries.each do |itinerary|
    = itinerary.name
    = itinerary.start_date

= button_tag 'Add Trip', :id => 'new_trip', :class => 'button radius'

.row
  .itinform.hide
    .7-large.columns
      = form_tag do
        = label_tag :name
        = text_field_tag :name
        = label_tag :start_date
        = text_field_tag :start_date
        = hidden_field_tag :user_id
        = submit_tag nil, :class => 'button radius'
      %a#new_dest{ :"data-reveal-id" => "new-dest-modal", :href => "" } Click
    .5-large.columns

  #new-dest-modal{ :class => "reveal-modal" }
    %h2 hello
    %p.lead
    = form_tag do
      = label_tag :city
      = text_field_tag :city
      = submit_tag nil, :class => 'button radius'
    %br
    = link_to("Done", "#", :id => 'create_new_dest', :class => 'button alert radius tiny close-reveal-modal')
    %a.close-reveal-modal &#215;